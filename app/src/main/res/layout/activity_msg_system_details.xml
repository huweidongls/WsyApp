<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    tools:context="com.jiufang.wsyapp.ui.MsgSystemDetailsActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="8dp"
                android:layout_height="14dp" />

        </RelativeLayout>

        <TextView
            android:text="系统消息"
            style="@style/tv_top_title" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="19dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#171F24"
                android:textSize="16sp"
                android:text="【通知】疫情期间延长“暂停设备解绑服务"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="14dp"
                android:textColor="#949494"
                android:textSize="12sp"
                android:text="2020/04/30  18:24:37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:lineSpacingMultiplier="1.5"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="21dp"
                android:textColor="#171F24"
                android:textSize="14sp"
                android:text="为应对全国新型冠状病毒感染肺炎疫情，全面响应国家号召。延迟复工期间（即日起至2月16日），将暂停设备解绑申请审核，期间的设备解绑申请将于2月17日开始陆续审核。如需解绑设备也可在原账号下进行删除操作。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="45dp"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:textColor="#171F24"
                android:textSize="14sp"
                android:text="物视云"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="14dp"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:textColor="#171F24"
                android:textSize="14sp"
                android:text="2020年05月09日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
