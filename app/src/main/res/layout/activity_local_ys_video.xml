<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    tools:context="com.jiufang.wsyapp.ui.LocalYsVideoActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_all"
            android:layout_width="73dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/duihao_null"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:textColor="#585858"
                android:textSize="12sp"
                android:text="全选"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_edit"
            android:layout_alignParentRight="true"
            android:layout_width="42dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/edit"
                android:layout_width="14dp"
                android:layout_height="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sure"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="51dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#272727"
                android:textSize="12sp"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/ll_calendar"
            android:orientation="horizontal"
            android:background="@drawable/bg_eeeeee_14dp_bord"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="28dp">

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/calendar"
                android:layout_width="13dp"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#949494"
                android:textSize="10sp"
                android:text="2020-05-09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_gravity="center_vertical"
            android:background="#C3C3C3"
            android:layout_width="1dp"
            android:layout_height="17dp"/>

        <LinearLayout
            android:id="@+id/ll_type"
            android:background="@drawable/bg_f6f6f6_1dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="65dp"
            android:layout_height="28dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/msg_shebei_all"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:textSize="10sp"
                android:textColor="#272727"
                android:text="全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_time"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_start"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black_333333"
            android:text="请选择开始时间"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_end"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black_333333"
            android:text="请选择截止时间"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:textColor="@color/theme"
            android:textSize="15sp"
            android:text="查询"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/rv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_bottom"
        android:layout_marginBottom="31dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_marginLeft="14dp"
            android:background="@drawable/bg_fa985f_1dp_bord"
            android:gravity="center"
            android:textColor="#FA985F"
            android:textSize="13sp"
            android:text="删除"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="34dp" />

        <TextView
            android:layout_marginRight="14dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/bg_fa985f_1dp_bord"
            android:gravity="center"
            android:textColor="#FA985F"
            android:textSize="13sp"
            android:text="下载"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="34dp" />

    </LinearLayout>

</LinearLayout>
