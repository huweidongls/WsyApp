<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_person"
                android:background="@mipmap/my_bg"
                android:layout_width="match_parent"
                android:layout_height="208dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_marginTop="53dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/avatar"
                    android:layout_width="71dp"
                    android:layout_height="71dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_name"
                    android:layout_marginTop="135dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_hy"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white_ffffff"
                    android:textSize="12sp"
                    android:text="欢迎来到物视云"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <TextView
                    android:visibility="gone"
                    android:background="@drawable/bg_ffffff_11dp_bord"
                    android:id="@+id/tv_login"
                    android:gravity="center"
                    android:textColor="@color/white_ffffff"
                    android:textSize="13sp"
                    android:text="立即登录"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="139dp"
                    android:layout_width="85dp"
                    android:layout_height="23dp" />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="86dp">

                <RelativeLayout
                    android:id="@+id/rl_my_device"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/my_shebei"
                            android:layout_width="24dp"
                            android:layout_height="29dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:text="我的设备"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ECECEC"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/rl_my_file"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/my_wenjian"
                            android:layout_width="24dp"
                            android:layout_height="29dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:text="我的文件"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ECECEC"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/rl_goumaijilu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/my_jilu"
                            android:layout_width="24dp"
                            android:layout_height="29dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:text="购买记录"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:textColor="#444343"
                        android:textSize="13sp"
                        android:text="云空间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_gray"
                        android:layout_width="8dp"
                        android:layout_height="12dp" />

                </RelativeLayout>

                <View
                    android:background="#F4F4F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/rl_changjian"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:textColor="#444343"
                        android:textSize="13sp"
                        android:text="常见问题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_marginRight="33dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#C2BDBD"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_gray"
                        android:layout_width="8dp"
                        android:layout_height="12dp" />

                </RelativeLayout>

                <View
                    android:background="#F4F4F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/rl_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:textColor="#444343"
                        android:textSize="13sp"
                        android:text="wifi检测"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_gray"
                        android:layout_width="8dp"
                        android:layout_height="12dp" />

                </RelativeLayout>

                <View
                    android:background="#F4F4F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/rl_set"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:textColor="#444343"
                        android:textSize="13sp"
                        android:text="设置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginRight="39dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="#EC6468"
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_gray"
                        android:layout_width="8dp"
                        android:layout_height="12dp" />

                </RelativeLayout>

                <View
                    android:background="#F4F4F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:textColor="#444343"
                        android:textSize="13sp"
                        android:text="关于我们"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_gray"
                        android:layout_width="8dp"
                        android:layout_height="12dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
