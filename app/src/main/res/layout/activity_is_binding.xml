<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    tools:context="com.jiufang.wsyapp.ui.IsBindingActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="设备已绑定"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="53dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/kefu"
                android:layout_width="27dp"
                android:layout_height="24dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rl_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/yibangding"
            android:layout_width="match_parent"
            android:layout_height="234dp" />

        <TextView
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="67dp"
            android:text="该设备已绑定在您的账号下"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="#F47435"
            android:textSize="13sp"
            android:text="—   温馨提示   —"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#7F7F7F"
            android:textSize="11sp"
            android:text="若您无法与其取得联系，请拨打“乐橙/荧石云”全国"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="#7F7F7F"
            android:textSize="11sp"
            android:text="服务热线“400-XXX-XXXX”进行设备解绑。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
