<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    tools:context="com.jiufang.wsyapp.ui.AddDeviceWifiActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="设备添加"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="53dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/kefu"
                android:layout_width="27dp"
                android:layout_height="24dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@mipmap/bg_wifi"
            android:layout_width="match_parent"
            android:layout_height="179dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/wifi"
                    android:layout_width="72dp"
                    android:layout_height="75dp" />

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white_ffffff"
                        android:textSize="16sp"
                        android:text="2.4G可用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/duihao_green"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white_ffffff"
                        android:textSize="16sp"
                        android:text="5G不可用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/jinzhi"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/bg_d2d2d3_bord"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/wifi_blue"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="51dp"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:text="无限局域网"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_gray"
                android:layout_width="7dp"
                android:layout_height="11dp" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:textColor="#7F7F7F"
                android:textSize="14sp"
                android:text="meijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/bg_d2d2d3_bord"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <RelativeLayout
                android:id="@+id/rl_eye"
                android:layout_alignParentRight="true"
                android:layout_width="45dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/biyan"
                    android:layout_width="19dp"
                    android:layout_height="13dp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="60dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/black_333333"
                android:hint="请输入WIFI密码"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/duihao_blue"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:textColor="#7F7F7F"
                android:textSize="13sp"
                android:text="记住密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:background="@drawable/bg_f6f6f6_3dp"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="下一步"
            android:layout_marginTop="31dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>
