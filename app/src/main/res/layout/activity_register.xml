<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="com.jiufang.wsyapp.ui.RegisterActivity">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/back_f"
            android:layout_width="12dp"
            android:layout_height="21dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="41dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textSize="21sp"
        android:textColor="@color/white_ffffff"
        android:text="欢迎注册物视云"
        android:layout_below="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/tv_logo"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/phone"
                android:layout_width="11dp"
                android:layout_height="17dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:inputType="phone"
                android:textColor="@color/black_333333"
                android:textSize="13sp"
                android:hint="请输入手机号码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/ll_phone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="31dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_code"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:textColor="@color/black_333333"
                android:textSize="13sp"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/theme"
                android:layout_width="1dp"
                android:layout_height="14dp"/>

            <TextView
                android:gravity="center"
                android:id="@+id/tv_send"
                android:textColor="@color/theme"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:layout_width="120dp"
                android:layout_height="22dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/bg_ffa16f_17dp_bord"
        android:textSize="17sp"
        android:textColor="@color/theme"
        android:text="下一步"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/ll_pwd"
        android:layout_marginLeft="101dp"
        android:layout_marginRight="101dp"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gouxuan"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#939393"
            android:textSize="11sp"
            android:layout_marginLeft="3dp"
            android:text="创建账号即表示您同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/theme"
            android:textSize="11sp"
            android:layout_marginLeft="3dp"
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#717171"
        android:textSize="8sp"
        android:text="物视云1.0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
