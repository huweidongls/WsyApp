<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    tools:context="com.jiufang.wsyapp.ui.PersonInformationActivity">

    <RelativeLayout
        style="@style/rl_top_bar">
        
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="账号信息"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_alignParentRight="true"
            android:layout_width="56dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#FF9966"
                android:textSize="12sp"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        
    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="184dp">

                <RelativeLayout
                    android:id="@+id/rl_avatar"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="83dp"
                    android:layout_height="83dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:src="@color/black_333333"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/camera_w"
                        android:layout_width="18dp"
                        android:layout_height="14dp" />

                </RelativeLayout>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11dp"
                    android:textColor="#373737"
                    android:textSize="10sp"
                    android:text="点击更换头像"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rl_nickname"
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#444343"
                    android:textSize="14sp"
                    android:text="昵称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:hint="请输入昵称"
                    android:id="@+id/tv_nickname"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="107dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#444343"
                    android:textSize="14sp"
                    android:text="手机号码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="107dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:background="#F3F3F3"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="实名认证信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#444343"
                    android:textSize="14sp"
                    android:text="真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_realname"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="107dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rl_map"
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#444343"
                    android:textSize="14sp"
                    android:text="居住地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_marginRight="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="107dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_centerVertical="true"
                    android:layout_marginRight="52dp"
                    android:layout_alignParentRight="true"
                    android:background="#A8A8A8"
                    android:layout_width="1dp"
                    android:layout_height="14dp"/>
                
                <TextView
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#A8A8A8"
                    android:textSize="14sp"
                    android:text="地图"
                    android:layout_width="52dp"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#444343"
                    android:textSize="14sp"
                    android:text="门牌号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_men"
                    android:hint="请输入门牌号"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="107dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:textColor="#949494"
                android:textSize="11sp"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="21dp"
                android:text="声明：您填写的一键报警信息确保真实、有效，该信息在您使用一键报警功能时传送到相关部门。虚报、假报您将承担相应法律责任。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
